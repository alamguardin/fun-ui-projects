---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,500&display=swap" rel="stylesheet">		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
    :root {
        /* Colors */
        --zinc-950: #09090b;
        --zinc-900: #18181b;
        --zinc-800: #27272a;
        --zinc-500: #71717a;
        --zinc-50: #fafafa;
        --violet-500: #8b5cf6;
        --violet-400: #A78BFA;

        /* Default Styles */
        font-family: 'Satoshi', sans-serif;
        font-size: 16px;
        background: var(--zinc-950);
        color: var(--zinc-50);
    }

    *, *::before, *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    a {
        text-decoration: none;
    }

    img {
        max-width: 100%;
    }

    .container {
        max-width: 1140px;
        width: 90%;
        margin: auto;
    }
</style>
