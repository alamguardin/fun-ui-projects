---
interface Props {
    title: string;
    img: any;
    src: string;
}

const { title, img, src } = Astro.props;
---

<a href={src} class="card">
    <figure class="card-banner">
        <img src={img} alt="">
    </figure>
    <h2 class="card-title">{title}</h2>
</a>

<style>
    a {
        text-decoration: none;
    }

    .card {
        display: block;
    }

    .card-banner {
        aspect-ratio: 4 / 3;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .card-banner img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform .2s ease;
    }

    .card:hover .card-banner img {
        transform: scale(1.1);
    }

    .card-title {
        margin-top: 0.5rem;
        font-size: 1.125rem;
        font-weight: 500;
        color: var(--zinc-50);
    }
</style>