---
interface Props {
    title: string;
    img: string;
    src: string;
}

const { title, img, src } = Astro.props;
---

<a href={src} class="card">
    <figure class="card-banner">
        <img src={img} alt="">
    </figure>
    <h2 class="card-title">{title}</h2>
</a>

<style>
    a {
        text-decoration: none;
    }

    .card {
        display: block;
        padding: 1rem;
        background: #09090b;
        border: 1px solid #262626;
        border-radius: 1rem;
        transition: .3s all ease;
    }

    .card:hover {
        transform: rotate(-8deg);
    }

    .card-banner {
        aspect-ratio: 16 / 9;
        background: #262626;
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: inset 0 0 3rem 0.3125rem #09090b;
    }

    .card-title {
        margin-top: 0.5rem;
        font-size: 1.5rem;
        font-weight: 500;
        color: #fafafa;
    }
</style>